<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/achivements"
        android:name="cat.copernic.meetrunning.UI.profile.AchivementsFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_achivements">
        <action
            android:id="@+id/action_achivements_to_myRoutes"
            app:destination="@id/myRoutes"
            app:popUpTo="@id/home" />
        <action
            android:id="@+id/action_achivements_to_stats"
            app:destination="@id/stats"
            app:popUpTo="@id/home" />
        <action
            android:id="@+id/action_achivements_to_photos"
            app:destination="@id/photos"
            app:popUpTo="@id/home" />
        <action
            android:id="@+id/action_achivements_to_editProfile"
            app:destination="@id/editProfile"
            app:popUpTo="@id/myRoutes" />
    </fragment>
    <fragment
        android:id="@+id/addRoute"
        android:name="cat.copernic.meetrunning.UI.addRoute.AddRouteFragment"
        android:label="@string/add_route"
        tools:layout="@layout/fragment_add_route">
        <argument
            android:name="route"
            app:argType="com.google.android.gms.maps.model.LatLng[]" />
        <argument
            android:name="distance"
            app:argType="float" />
        <action
            android:id="@+id/action_addRoute_to_home"
            app:destination="@id/home" />
        <argument
            android:name="time"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/addRouteMap"
        android:name="cat.copernic.meetrunning.UI.addRoute.AddRouteMapFragment"
        android:label="@string/add_route"
        tools:layout="@layout/fragment_add_route_map">
        <action
            android:id="@+id/action_addRouteMap_to_addRoute"
            app:destination="@id/addRoute"
            app:popUpTo="@id/home" />
    </fragment>
    <fragment
        android:id="@+id/editProfile"
        android:name="cat.copernic.meetrunning.UI.profile.EditProfileFragment"
        android:label="@string/edit_profile"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/favorites"
        android:name="cat.copernic.meetrunning.UI.favorites.FavoritesFragment"
        android:label="@string/favorites"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_favorites_to_route"
            app:destination="@id/route" />
    </fragment>
    <fragment
        android:id="@+id/meetMap"
        android:name="cat.copernic.meetrunning.UI.meetMap.MeetMapFragment"
        android:label="@string/map"
        tools:layout="@layout/fragment_meet_map" />
    <fragment
        android:id="@+id/home"
        android:name="cat.copernic.meetrunning.UI.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_route"
            app:destination="@id/route" />
        <action
            android:id="@+id/action_home_to_addRouteMap"
            app:destination="@id/addRouteMap" />
    </fragment>
    <fragment
        android:id="@+id/photos"
        android:name="cat.copernic.meetrunning.UI.profile.PhotosFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_photos">
        <action
            android:id="@+id/action_photos_to_myRoutes"
            app:destination="@id/myRoutes"
            app:popUpTo="@id/home"/>
        <action
            android:id="@+id/action_photos_to_achivements"
            app:destination="@id/achivements"
            app:popUpTo="@id/home"/>
        <action
            android:id="@+id/action_photos_to_stats"
            app:destination="@id/stats"
            app:popUpTo="@id/home" />
        <action
            android:id="@+id/action_photos_to_editProfile"
            app:destination="@id/editProfile"
            app:popUpTo="@id/myRoutes" />
    </fragment>
    <fragment
        android:id="@+id/myRoutes"
        android:name="cat.copernic.meetrunning.UI.profile.MyRoutesFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_myRoutes_to_route"
            app:destination="@id/route"
            app:popUpTo="@id/home"/>
        <action
            android:id="@+id/action_myRoutes_to_editProfile"
            app:destination="@id/editProfile"
            app:popUpTo="@id/myRoutes" />
        <action
            android:id="@+id/action_myRoutes_to_achivements"
            app:destination="@id/achivements"
            app:popUpTo="@id/home"/>
        <action
            android:id="@+id/action_myRoutes_to_stats"
            app:destination="@id/stats"
            app:popUpTo="@id/home" />
        <action
            android:id="@+id/action_myRoutes_to_photos"
            app:destination="@id/photos"
            app:popUpTo="@id/home"/>
    </fragment>
    <fragment
        android:id="@+id/ranking"
        android:name="cat.copernic.meetrunning.UI.ranking.RankingFragment"
        android:label="@string/ranking"
        tools:layout="@layout/fragment_ranking" />
    <fragment
        android:id="@+id/route"
        android:name="cat.copernic.meetrunning.UI.route.RouteFragment"
        android:label="@string/route"
        tools:layout="@layout/fragment_route">
        <argument
            android:name="post"
            app:argType="cat.copernic.meetrunning.dataClass.DataRoute"
            app:nullable="true" />
        <action
            android:id="@+id/action_route_to_routeMap"
            app:destination="@id/routeMap" />
    </fragment>
    <fragment
        android:id="@+id/routeMap"
        android:name="cat.copernic.meetrunning.UI.route.RouteMapFragment"
        android:label="@string/route_map"
        tools:layout="@layout/fragment_route_map">
        <argument
            android:name="route"
            app:argType="com.google.android.gms.maps.model.LatLng[]" />
        <action
            android:id="@+id/action_routeMap_to_home"
            app:destination="@id/home" />
    </fragment>
    <fragment
        android:id="@+id/settings"
        android:name="cat.copernic.meetrunning.UI.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/stats"
        android:name="cat.copernic.meetrunning.UI.profile.StatsFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_stats">
        <action
            android:id="@+id/action_stats_to_myRoutes"
            app:destination="@id/myRoutes"
            app:popUpTo="@id/home"/>
        <action
            android:id="@+id/action_stats_to_achivements"
            app:destination="@id/achivements"
            app:popUpTo="@id/home"/>
        <action
            android:id="@+id/action_stats_to_photos"
            app:destination="@id/photos"
            app:popUpTo="@id/home" />
        <action
            android:id="@+id/action_stats_to_editProfile"
            app:destination="@id/editProfile"
            app:popUpTo="@id/myRoutes" />
    </fragment>
</navigation>