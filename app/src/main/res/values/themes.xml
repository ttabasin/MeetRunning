<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeetRunning" parent="Theme.MaterialComponents.Light.LargeTouch">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appBar</item>
        <item name="colorPrimaryVariant">@color/bckground</item>
        <item name="colorOnPrimary">@color/ic_launcher_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MeetRunning.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MeetRunning.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>