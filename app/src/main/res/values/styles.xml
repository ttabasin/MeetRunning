<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="txtViewLogin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/asap_bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="txtViewInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/asap_bold</item>
    </style>

    <style name="editTxtLogin">
        <item name="android:layout_width">326dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">296dp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="editTxtPasswd">
        <item name="android:layout_width">326dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:imeActionLabel">@string/action_sign_in</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="buttonLog">
        <item name="android:layout_width">326dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">64dp</item>
        <item name="android:backgroundTint">#AEDD94</item>
        <item name="android:fontFamily">@font/asap_bold</item>
        <item name="android:paddingStart">120dp</item>
        <item name="android:paddingEnd">120dp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>